<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="@dimen/size_button_top"
        android:layout_height="@dimen/size_button_top"
        android:layout_marginStart="@dimen/margin_start_button_top"
        android:layout_marginTop="@dimen/margin_top_button_top"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/backbutton" />

    <ImageView
        android:id="@+id/btnDone"
        android:layout_width="@dimen/size_button_top"
        android:layout_height="@dimen/size_button_top"
        android:layout_marginTop="@dimen/margin_top_button_top"
        android:layout_marginEnd="@dimen/margin_start_button_top"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/checklist" />

    <TextView
        android:id="@+id/tv_editProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_with_button"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:text="@string/edit_profile"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="@dimen/size_title_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/profilePhoto"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_editProfile"
        app:srcCompat="@drawable/profilepic_edit" />

    <TextView
        android:id="@+id/btnChangeProfilePhoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_content"
        android:fontFamily="@font/montserrat"
        android:text="@string/tap_to_change"
        android:textAlignment="center"
        android:textColor="#2D9CDB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilePhoto" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_title_to_desc_text"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnChangeProfilePhoto">

        <Button
            android:id="@+id/btnEditName"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="@dimen/margin_input_left_right_bottom"
            android:layout_marginRight="@dimen/margin_input_left_right_bottom"
            android:layout_marginBottom="@dimen/margin_content"
            android:background="@drawable/custom_button"
            android:drawableEnd="@drawable/arrow_right"
            android:drawablePadding="@dimen/padding_drawable"
            android:fontFamily="@font/montserrat"
            android:paddingStart="@dimen/padding_start"
            android:paddingEnd="@dimen/padding_start"
            android:text="@string/text_edit_name"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@color/black"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/btnEditEmail"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="@dimen/margin_input_left_right_bottom"
            android:layout_marginRight="@dimen/margin_input_left_right_bottom"
            android:layout_marginBottom="@dimen/margin_content"
            android:background="@drawable/custom_button"
            android:drawableEnd="@drawable/arrow_right"
            android:drawablePadding="@dimen/padding_drawable"
            android:fontFamily="@font/montserrat"
            android:paddingStart="@dimen/padding_start"
            android:paddingEnd="@dimen/padding_start"
            android:text="@string/text_edit_email"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@color/black"
            app:backgroundTint="@null"/>

        <Button
            android:id="@+id/btnEditPhone"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="@dimen/margin_input_left_right_bottom"
            android:layout_marginRight="@dimen/margin_input_left_right_bottom"
            android:layout_marginBottom="@dimen/margin_content"
            android:background="@drawable/custom_button"
            android:drawableEnd="@drawable/arrow_right"
            android:drawablePadding="@dimen/padding_drawable"
            android:fontFamily="@font/montserrat"
            android:paddingStart="@dimen/padding_start"
            android:paddingEnd="@dimen/padding_start"
            android:text="@string/text_edit_phone_number"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@color/black"
            app:backgroundTint="@null"/>

        <Button
            android:id="@+id/btnEditAddress"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="@dimen/margin_input_left_right_bottom"
            android:layout_marginRight="@dimen/margin_input_left_right_bottom"
            android:layout_marginBottom="@dimen/margin_content"
            android:background="@drawable/custom_button"
            android:drawableEnd="@drawable/arrow_right"
            android:drawablePadding="@dimen/padding_drawable"
            android:fontFamily="@font/montserrat"
            android:paddingStart="@dimen/padding_start"
            android:paddingEnd="@dimen/padding_start"
            android:text="@string/text_edit_address"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@color/black"
            app:backgroundTint="@null"/>

        <Button
            android:id="@+id/btnEditGender"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="@dimen/margin_input_left_right_bottom"
            android:layout_marginRight="@dimen/margin_input_left_right_bottom"
            android:layout_marginBottom="@dimen/margin_input_left_right_bottom"
            android:background="@drawable/custom_button"
            android:drawableEnd="@drawable/arrow_right"
            android:drawablePadding="@dimen/padding_drawable"
            android:fontFamily="@font/montserrat"
            android:paddingStart="@dimen/padding_start"
            android:paddingEnd="@dimen/padding_start"
            android:text="@string/text_edit_gender"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@color/black"
            app:backgroundTint="@null"/>

        <Button
            android:id="@+id/btnChangePass"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="@dimen/margin_input_left_right_bottom"
            android:layout_marginRight="@dimen/margin_input_left_right_bottom"
            android:layout_marginTop="@dimen/margin_input_left_right_bottom"
            android:layout_marginBottom="@dimen/margin_content"
            android:background="@drawable/custom_button"
            android:drawableEnd="@drawable/arrow_right"
            android:drawablePadding="@dimen/padding_drawable"
            android:fontFamily="@font/montserrat"
            android:paddingStart="@dimen/padding_start"
            android:paddingEnd="@dimen/padding_start"
            android:text="@string/text_change_password"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@color/black"
            app:backgroundTint="@null"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>