<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_editProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_title_to_desc_text"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:text="@string/profile"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="@dimen/size_title_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/profilePhoto"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_editProfile"
        app:srcCompat="@drawable/profilepic_edit" />

    <TextView
        android:id="@+id/btnChangeProfilePhoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_content"
        android:fontFamily="@font/montserrat"
        android:text="@string/tap_to_change"
        android:textAlignment="center"
        android:textColor="#2D9CDB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilePhoto" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnChangeProfilePhoto">

        <ImageView
            android:id="@+id/imageView18"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/favourites" />

        <TextView
            android:id="@+id/txtCountSaved"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat"
            android:text="TextView"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <Button
            android:id="@+id/btnEditName"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="@dimen/margin_input_left_right_bottom"
            android:layout_marginRight="@dimen/margin_input_left_right_bottom"
            android:layout_marginBottom="@dimen/margin_content"
            android:background="@drawable/custom_button"
            android:drawableEnd="@drawable/arrow_right"
            android:drawablePadding="@dimen/padding_drawable"
            android:fontFamily="@font/montserrat"
            android:paddingStart="@dimen/padding_start"
            android:paddingEnd="@dimen/padding_start"
            android:text="@string/text_edit_name"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@color/black"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/btnEditEmail"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="@dimen/margin_input_left_right_bottom"
            android:layout_marginRight="@dimen/margin_input_left_right_bottom"
            android:layout_marginBottom="@dimen/margin_content"
            android:background="@drawable/custom_button"
            android:drawableEnd="@drawable/arrow_right"
            android:drawablePadding="@dimen/padding_drawable"
            android:fontFamily="@font/montserrat"
            android:paddingStart="@dimen/padding_start"
            android:paddingEnd="@dimen/padding_start"
            android:text="@string/text_edit_email"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@color/black"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/btnEditPhone"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="@dimen/margin_input_left_right_bottom"
            android:layout_marginRight="@dimen/margin_input_left_right_bottom"
            android:layout_marginBottom="@dimen/margin_content"
            android:background="@drawable/custom_button"
            android:drawableEnd="@drawable/arrow_right"
            android:drawablePadding="@dimen/padding_drawable"
            android:fontFamily="@font/montserrat"
            android:paddingStart="@dimen/padding_start"
            android:paddingEnd="@dimen/padding_start"
            android:text="@string/text_edit_phone_number"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@color/black"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/btnEditAddress"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="@dimen/margin_input_left_right_bottom"
            android:layout_marginRight="@dimen/margin_input_left_right_bottom"
            android:layout_marginBottom="@dimen/margin_content"
            android:background="@drawable/custom_button"
            android:drawableEnd="@drawable/arrow_right"
            android:drawablePadding="@dimen/padding_drawable"
            android:fontFamily="@font/montserrat"
            android:paddingStart="@dimen/padding_start"
            android:paddingEnd="@dimen/padding_start"
            android:text="@string/text_edit_address"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@color/black"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/btnEditGender"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="@dimen/margin_input_left_right_bottom"
            android:layout_marginRight="@dimen/margin_input_left_right_bottom"
            android:layout_marginBottom="@dimen/margin_input_left_right_bottom"
            android:background="@drawable/custom_button"
            android:drawableEnd="@drawable/arrow_right"
            android:drawablePadding="@dimen/padding_drawable"
            android:fontFamily="@font/montserrat"
            android:paddingStart="@dimen/padding_start"
            android:paddingEnd="@dimen/padding_start"
            android:text="@string/text_edit_gender"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@color/black"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/btnChangePass"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="@dimen/margin_input_left_right_bottom"
            android:layout_marginTop="@dimen/margin_input_left_right_bottom"
            android:layout_marginRight="@dimen/margin_input_left_right_bottom"
            android:layout_marginBottom="@dimen/margin_content"
            android:background="@drawable/custom_button"
            android:drawableEnd="@drawable/arrow_right"
            android:drawablePadding="@dimen/padding_drawable"
            android:fontFamily="@font/montserrat"
            android:paddingStart="@dimen/padding_start"
            android:paddingEnd="@dimen/padding_start"
            android:text="@string/text_change_password"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@color/black"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_input_button"
            android:layout_marginStart="@dimen/margin_input_left_right_bottom"
            android:layout_marginEnd="@dimen/margin_input_left_right_bottom"
            android:fontFamily="@font/montserrat"
            android:text="@string/logout"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_button"
            android:textStyle="bold"
            app:backgroundTint="@color/uid_yellow"
            app:cornerRadius="@dimen/radius_button" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>