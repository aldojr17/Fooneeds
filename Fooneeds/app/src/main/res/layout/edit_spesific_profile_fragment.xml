<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_editSpesific"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_no_button"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:text="@string/edit_email"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="@dimen/size_title_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/editLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_title_to_layout"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_editSpesific">

        <TextView
            android:id="@+id/tv_edit"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_text"
            android:layout_marginStart="@dimen/margin_input_left_right_bottom"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat"
            android:gravity="start"
            android:text="@string/text_edit_email"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/et_editSpesific1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_input_button"
            android:layout_marginLeft="@dimen/margin_input_left_right_bottom"
            android:layout_marginRight="@dimen/margin_input_left_right_bottom"
            android:layout_marginBottom="@dimen/margin_input_left_right_bottom"
            android:background="@drawable/custom_input"
            android:ems="10"
            android:fontFamily="@font/montserrat"
            android:inputType="textEmailAddress"
            android:paddingStart="@dimen/padding_start"
            android:paddingEnd="@dimen/padding_start"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_edit2"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_text"
            android:layout_marginStart="@dimen/margin_input_left_right_bottom"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat"
            android:gravity="start"
            android:text="@string/text_city"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/et_editSpesific2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_input_button"
            android:layout_marginLeft="@dimen/margin_input_left_right_bottom"
            android:layout_marginRight="@dimen/margin_input_left_right_bottom"
            android:layout_marginBottom="@dimen/margin_input_left_right_bottom"
            android:layout_weight="1"
            android:background="@drawable/custom_input"
            android:ems="10"
            android:fontFamily="@font/montserrat"
            android:inputType="textEmailAddress"
            android:paddingStart="@dimen/padding_start"
            android:paddingEnd="@dimen/padding_start"
            android:textColor="@color/black" />

        <Spinner
            android:id="@+id/spin_gender"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_input_button"
            android:layout_marginStart="@dimen/margin_input_left_right_bottom"
            android:layout_marginEnd="@dimen/margin_input_left_right_bottom"
            android:layout_marginBottom="@dimen/margin_input_left_right_bottom"
            android:layout_weight="1"
            android:background="@drawable/custom_input"
            android:entries="@array/gender"
            android:paddingStart="@dimen/padding_start"
            android:paddingEnd="@dimen/padding_start" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_input_button"
            android:layout_marginLeft="@dimen/margin_input_left_right_bottom"
            android:layout_marginRight="@dimen/margin_input_left_right_bottom"
            android:layout_marginBottom="@dimen/margin_input_left_right_bottom"
            android:layout_weight="1"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_input_button"
            android:layout_marginLeft="@dimen/margin_input_left_right_bottom"
            android:layout_marginRight="@dimen/margin_input_left_right_bottom"
            android:layout_marginBottom="@dimen/margin_input_left_right_bottom"
            android:fontFamily="@font/montserrat"
            android:text="@string/text_confirm"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_button"
            android:textStyle="bold"
            app:backgroundTint="@color/uid_yellow"
            app:cornerRadius="@dimen/radius_button" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/changePasswordLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_title_to_layout"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_editSpesific">

        <TextView
            android:id="@+id/tv_currentPassword"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_text"
            android:layout_marginStart="@dimen/margin_input_left_right_bottom"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat"
            android:gravity="start"
            android:text="@string/text_edit_current_password"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/et_currentPassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_input_button"
            android:layout_marginLeft="@dimen/margin_input_left_right_bottom"
            android:layout_marginRight="@dimen/margin_input_left_right_bottom"
            android:background="@drawable/custom_input"
            android:ems="10"
            android:fontFamily="@font/montserrat"
            android:inputType="textEmailAddress"
            android:paddingStart="@dimen/padding_start"
            android:paddingEnd="@dimen/padding_start"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/btnForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_text"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/margin_input_left_right_bottom"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/montserrat"
            android:gravity="end"
            android:text="@string/text_forgot_password"
            android:textColor="@color/blue_2" />

        <TextView
            android:id="@+id/tv_newPassword"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_text"
            android:layout_gravity="start"
            android:layout_marginStart="@dimen/margin_input_left_right_bottom"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat"
            android:gravity="start"
            android:text="@string/text_new_password"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/et_newPassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_input_button"
            android:layout_marginLeft="@dimen/margin_input_left_right_bottom"
            android:layout_marginRight="@dimen/margin_input_left_right_bottom"
            android:layout_marginBottom="@dimen/margin_input_left_right_bottom"
            android:layout_weight="1"
            android:background="@drawable/custom_input"
            android:ems="10"
            android:fontFamily="@font/montserrat"
            android:inputType="textEmailAddress"
            android:paddingStart="@dimen/padding_start"
            android:paddingEnd="@dimen/padding_start"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_confirmPassword"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_text"
            android:layout_marginStart="@dimen/margin_input_left_right_bottom"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat"
            android:gravity="start"
            android:text="@string/text_confirm_password"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/et_confirmPassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_input_button"
            android:layout_marginLeft="@dimen/margin_input_left_right_bottom"
            android:layout_marginRight="@dimen/margin_input_left_right_bottom"
            android:layout_marginBottom="@dimen/margin_input_left_right_bottom"
            android:layout_weight="1"
            android:background="@drawable/custom_input"
            android:ems="10"
            android:fontFamily="@font/montserrat"
            android:inputType="textEmailAddress"
            android:paddingStart="@dimen/padding_start"
            android:paddingEnd="@dimen/padding_start"
            android:textColor="@color/black" />

        <ProgressBar
            android:id="@+id/progressBar2"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_input_button"
            android:layout_marginLeft="@dimen/margin_input_left_right_bottom"
            android:layout_marginRight="@dimen/margin_input_left_right_bottom"
            android:layout_marginBottom="@dimen/margin_input_left_right_bottom"
            android:layout_weight="1"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnChangePassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_input_button"
            android:layout_marginLeft="@dimen/margin_input_left_right_bottom"
            android:layout_marginRight="@dimen/margin_input_left_right_bottom"
            android:layout_marginBottom="@dimen/margin_input_left_right_bottom"
            android:fontFamily="@font/montserrat"
            android:text="@string/text_change_password"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_button"
            android:textStyle="bold"
            app:backgroundTint="@color/uid_yellow"
            app:cornerRadius="@dimen/radius_button" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>